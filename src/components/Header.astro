</header>
<script>
  const logo = document.getElementById('site-logo');
  const body = document.body;

  function updateLogo() {
    logo.src = body.classList.contains('dark') ? '/public/imgs/logo/logow.svg' : '/public/imgs/logo/logob.svg';
  }
  updateLogo();
  new MutationObserver(updateLogo).observe(body, { attributes: true, attributeFilter: ['class'] });

  const hamburgerButton = document.getElementById('hamburger-button');
  const mobileMenu = document.getElementById('mobile-menu');

  hamburgerButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close the menu when a link is clicked (optional, but good for user experience)
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => mobileMenu.classList.add('hidden'));
  });
</script>
