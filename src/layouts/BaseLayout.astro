---
const { title = "Carreteras 2000 S.A." } = Astro.props
import Header from "../components/Header.astro"
import "../styles/global.css"
---
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
    <link rel="icon" href="/favicon.ico" />
  </head>

<body lang="es" class="text-gray-900 dark:text-gray-100 transition-colors duration-300 mx-auto bg-[url(/imgs/planta600-01.jpg)] bg-bottom-left bg-cover bg-fixed bg-no-repeat min-h-screen">
<Header />
    <!-- Contenido de cada página -->
    <main class="min-h-screen">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="bg-gray-100 dark:bg-gray-800 text-center py-2 text-sm text-gray-600 dark:text-gray-400">
      <div class="mt-8 text-center text-gray-600 dark:text-gray-400 pb-4">
        Pigüé - Caseaux nº 1514 - Tel. 02923-407910<br />
        Bahía Blanca - O'higgins nº 408 - Tel. 0291-4544862<br />
        info@carreteras2000.com.ar
        </div>
      &copy; {new Date().getFullYear()} Carreteras 2000 S.A. - Todos los derechos reservados.
    </footer>
  </body>
